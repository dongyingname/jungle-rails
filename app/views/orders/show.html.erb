<section class="cart-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!  <%= @email%></h4>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @sorted_products.each do |product| %>
          <%= render 'item', product: product, quantity:@line_items.find{|i| i.product_id == product.id}.quantity  %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%=  @order_subtotal_cents / 100.0 %> Dollars
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

 

</section>
